@model FitChildPanel.Models.Entity.TBLEGZERSIZ
@{
    ViewBag.Title = "IslemEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Egzersiz Ekle</h2>
<hr />
@if (TempData["ekleData"] != null)
{
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Egzersiz </strong> @TempData["ekleData"]
    </div>
}
<br />
<form class="form-group was-validated" method="post">
    <div>
        <div class="form-group">
            @Html.LabelFor(k => k.EgzersizAdi)
            @Html.TextBoxFor(k => k.EgzersizAdi, new { @class = "form-control", placeholder = "Egzersiz Adı", required = "required" })
            @*@Html.ValidationMessageFor(k => k.AD)*@
        </div>
        <div class="form-group">
            @Html.LabelFor(k => k.EgzersizYapilisi)
            @Html.TextAreaFor(k => k.EgzersizYapilisi, new { @class = "form-control", placeholder = "Egzersiz Yapılışı", required = "required", style = "height:200px" })
            @*@Html.ValidationMessageFor(k => k.AD)*@
        </div>
        <div class="form-group">
            @Html.LabelFor(k => k.EgzersizFayda)
            @Html.TextBoxFor(k => k.EgzersizFayda, new { @class = "form-control", placeholder = "Egzersiz Fayda", required = "required" })
            @*@Html.ValidationMessageFor(k => k.AD)*@
        </div>
        <div class="form-group">
            @Html.LabelFor(k => k.EgzersizSeviye)
            @Html.TextBoxFor(k => k.EgzersizSeviye, new { @class = "form-control", placeholder = "Egzersiz Seviye", required = "required" })
            @*@Html.ValidationMessageFor(k => k.AD)*@
        </div>
        <div class="form-group">
            @Html.LabelFor(k => k.EgzersizResim)
            @Html.TextBoxFor(k => k.EgzersizResim, new { @class = "form-control", placeholder = "Egzersiz Resim", required = "required" })
            @*@Html.ValidationMessageFor(k => k.AD)*@
        </div>
        <div>
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    </div>

</form>